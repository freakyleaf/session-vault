{
  "name": "studio-log",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "api:build": "cd packages/api && pnpm run build",
    "api:dev": "cd packages/api && pnpm run dev",
    "backend:build": "cd packages/backend && pnpm run build",
    "backend:dev": "cd packages/backend && pnpm run dev",
    "deps:update": "pnpm update && pnpm version:fix && pnpm install --lockfile-only",
    "dev": "concurrently --names \"API_____,BACKEND_,FRONTEND\" -c \"cyan,magenta,yellow\" --kill-others-on-fail \"pnpm api:dev\" \"pnpm backend:dev\" \"pnpm frontend:dev\"",
    "frontend:build": "cd packages/frontend && pnpm run build",
    "frontend:dev": "cd packages/frontend && pnpm run dev",
    "lint:scripts": "eslint",
    "lint:styles": "stylelint \"**/*.scss\"",
    "prepare": "husky",
    "version:check": "syncpack list-mismatches",
    "version:fix": "syncpack fix-mismatches",
    "version:update": "pnpm version:fix && pnpm install --lockfile-only"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.10",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "syncpack": "^13.0.4",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}
